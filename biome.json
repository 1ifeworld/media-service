{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "ignore": [
        "**/node_modules",
        ".nitro",
        ".output",
        "cache",
        "coverage",
        ".gitignore",
        "README.md"
      ]
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      },
      "ignore": [
        "**/node_modules",
        ".nitro",
        ".output",
        "cache",
        "coverage",
        ".gitignore",
        "README.md"
      ]
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "trailingComma": "all",
        "semicolons": "asNeeded"
      }
    }
  }
  